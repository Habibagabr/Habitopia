<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EADF">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="24dp"
        android:src="@drawable/back_arrow">
    </ImageView>

    <!-- Skip Button (Top Right) -->
    <TextView
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:padding="5dp"
        android:text="@string/skip"
        android:textColor="@color/green"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- Intro Text -->
    <TextView
        android:id="@+id/introText"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/skipButton"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/intro_text"
        android:textAlignment="center"
        android:textColor="#27767B"
        android:textSize="25sp" />

    <!-- Progress Background -->
    <View
        android:id="@+id/progressBackground"
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:layout_below="@id/introText"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/progress_background" />

    <!-- Progress Foreground + Number -->
    <!-- Progress Foreground + Number -->
    <RelativeLayout
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignStart="@id/progressBackground"
        android:layout_alignTop="@id/progressBackground"
        android:layout_alignBottom="@id/progressBackground">

        <View
            android:id="@+id/progressForeground"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@drawable/progress_foreground"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/progressForeground"
            android:layout_alignEnd="@id/progressForeground"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-4dp"
            android:text="1"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/darkBeige"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- Main Green Rectangle Area -->
    <LinearLayout
        android:id="@+id/greenRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBackground"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Card Styled Content -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E0B36B"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="2dp"
                    android:text="Q1"
                    android:textColor="#F2EADF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Turn reading to a daily habit and enter how many page do you want to read daily ? "
                    android:textColor="#F2EADF"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/pagesInput"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_rectangle_background"
                    android:padding="10dp"
                    android:hint="Answer"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textColorHint="#A1A486"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textColor="#E0B36B"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Continue Button -->
    <ImageButton
        android:id="@+id/continueButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/next_arrow"
        android:background="@null"
        android:contentDescription="@string/continue_text"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="0dp" />

</RelativeLayout>
